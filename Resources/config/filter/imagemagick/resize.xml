<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="asoc_dadatata.filter.imagemagick.resize.class">Asoc\Dadatata\Filter\ImageMagick\Resize</parameter>
    </parameters>

    <services>
        <service id="asoc_dadatata.filter.imagemagick.resize"
                 class="%asoc_dadatata.filter.imagemagick.resize.class%"
                 public="false"
                 abstract="true">
            <argument>%asoc_dadatata.tools.convert%</argument>
            <tag name="asoc_dadatata.filter" alias="imagemagick_resize"
                 options="asoc_dadatata.filter_options.image_options"/>
        </service>
    </services>
</container>